<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/party_layout_bodyArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="12dp"
        android:background="@drawable/ago"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:text="TIPS : Android5.0 は Lollipop と呼ばれる。"
                android:textSize="16dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/frame_textview_01"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="3"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="5"
                android:orientation="vertical">

            </LinearLayout>

            <Button
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/frame_textview_01"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/part_party_categoryStatusButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:background="@drawable/frame_textview_01"/>

            <Button
                android:id="@+id/part_party_categoryEquipmentButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:background="@drawable/frame_textview_01"/>

            <Button
                android:id="@+id/part_party_categoryCommandsButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:background="@drawable/frame_textview_01"/>

            <Button
                android:id="@+id/part_party_closePartyButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="3"
                android:background="@drawable/frame_textview_01"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>