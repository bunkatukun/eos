<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/listItemHeader_item_part_itemWeightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:gravity="center"
        android:minWidth="32sp"
        android:text="Wgt"/>

    <TextView
        android:id="@+id/listItemHeader_item_part_itemValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_toLeftOf="@+id/listItemHeader_item_part_itemWeightText"
        android:gravity="center"
        android:minWidth="32sp"
        android:text="Value"/>

    <TextView
        android:id="@+id/listItem_item_part_itemTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_toLeftOf="@+id/listItemHeader_item_part_itemValueText"
        android:gravity="left|center_vertical"
        android:text="Name"/>
</RelativeLayout>