<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/playdata_part_selectDataThumbnailImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/thumb_test169"/>

        <TextView
            android:id="@+id/playdata_part_selectDateDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playdata_part_selectDataThumbnailImage"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="12 April, 1992"
            android:textSize="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playdata_part_selectDateDateText"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Edinburgh"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/playdata_part_dataSLButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="5"
                android:background="@drawable/button_common_normal"
                android:text="Load[WIP]"
                android:textColor="#ffcccccc"/>

            <Button
                android:id="@+id/playdata_part_dataDeleteButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="5"
                android:background="@drawable/button_common_normal"
                android:text="Delete[WIP]"
                android:textColor="#ffcccccc"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/playdata_part_rightButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/playdata_part_backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                android:background="@drawable/button_common_normal"
                android:text="もどる"
                android:textColor="#ffcccccc"/>

            <Button
                android:id="@+id/playdata_part_dataListSortButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:layout_toLeftOf="@+id/playdata_part_backButton"
                android:background="@drawable/button_common_normal"
                android:text="Sort[WIP]"
                android:textColor="#ffcccccc"/>
        </RelativeLayout>

        <ListView
            android:id="@+id/playdata_part_saveDataListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/playdata_part_rightButtonLayout"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
</LinearLayout>